{
  "compilerOptions": {
    "target": "ES5",                          
    "module": "ESNext",                       
    "declaration": true,                     
    "outDir": "./dist",                       
    "strict": true,                           
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                     
    "sourceMap": true,                        
    "noImplicitAny": true,                    
    "moduleResolution": "node",               
    "allowSyntheticDefaultImports": true,     
    "lib": ["DOM", "ES2015", "ES2016", "ES2017"], 
    "strictNullChecks": true,                 
    "noUnusedLocals": true,                   
    "noUnusedParameters": true                
  },
  "include": ["src/**/*"]                     
}
